<Window x:Class="ATM_JorisDeRidder_WPF.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATM_JorisDeRidder_WPF.View"
        xmlns:userControl="clr-namespace:ATM_JorisDeRidder_WPF.userControls" xmlns:viewmodel="clr-namespace:ATM_JorisDeRidder_WPF.ViewModel"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Foreground="White"
        Background="#111C26"
        FontFamily="Poppins"
        VerticalAlignment="Center"
        Title="LoginView" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <StackPanel  Grid.ColumnSpan="3" Grid.Row="0" Margin="20" Grid.Column="2">
            <Label Foreground="#fff" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center">Sign in</Label>
        </StackPanel>
        <userControl:Header Grid.ColumnSpan="3" Grid.Row="0" />
        <StackPanel Margin="10" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3">
            <Label x:Name="lblName" Foreground="White">Email</Label>
            <TextBox Foreground="Black" Background="White" Padding="20" Text="{Binding Client.ClientEmail}" />
        </StackPanel>
        <StackPanel Margin="10" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3">
            <Label x:Name="lblPassword" Foreground="White">Password</Label>
            <TextBox Foreground="Black" Background="White" Padding="20" Text="{Binding Client.Password}" />
            <Label Content="{Binding foutmelding}" Foreground="Red" FontSize="15" />
            <Button x:Name="btnLogin" Grid.Column="2" Grid.Row="5" Grid.ColumnSpan="3" Height="50" Content="Login" Command="{Binding}" CommandParameter="Login" />
            <StackPanel>
                <StackPanel Margin="0 20" Orientation="Horizontal">
                    <TextBlock x:Name="txtMember" VerticalAlignment="Center" Foreground="#fff" Text="Not yet member? " />
                    <Button x:Name="txtSignup" Style="{DynamicResource RoundedButtonStyle}" Foreground="#4FC5FF" Background="Transparent" BorderBrush="Transparent" Command="{Binding}" CommandParameter="Register">Signup now</Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <userControl:Footer Grid.Column="0" Grid.ColumnSpan="7" Grid.Row="2" />
    </Grid>
</Window>